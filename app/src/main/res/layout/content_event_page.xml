<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/fab_margin"
    android:paddingRight="@dimen/fab_margin"
    android:paddingTop="@dimen/fab_margin"
    android:paddingBottom="@dimen/fab_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_event_page"
    tools:context="com.example.limethecoder.eventkicker.EventPageActivity">

    <ScrollView android:id="@+id/event_form" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="220dp">

        <LinearLayout android:id="@+id/event_login_form" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="19sp"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:textColor="#ff272727"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/event_descr"
                android:text="Description Description Description Description Description Description Description Description"/>

    </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Additional information"
                android:textSize="19sp"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:textColor="#ff272727"/>

            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Author name"
                android:id="@+id/author_name"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:textColor="#ff272727"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <FrameLayout
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/circle">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:fitsSystemWindows="true"
                            android:adjustViewBounds="true"
                            android:layout_gravity="center"
                            android:src="@drawable/user" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_gravity="center_vertical"
                        android:alpha="0.8"
                        android:textColor="#ff272727"
                        android:textSize="15dp"
                        android:text="Joe Cole"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Created date"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:textColor="#ff272727"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <FrameLayout
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/circle">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:fitsSystemWindows="true"
                            android:adjustViewBounds="true"
                            android:layout_gravity="center"
                            android:src="@drawable/calendar" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/created_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_gravity="center_vertical"
                        android:alpha="0.8"
                        android:textColor="#ff272727"
                        android:textSize="15dp"
                        android:text="08/11/15"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scheduled date"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:textColor="#ff272727"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <FrameLayout
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/circle">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:fitsSystemWindows="true"
                            android:adjustViewBounds="true"
                            android:layout_gravity="center"
                            android:src="@drawable/calendar" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/scheduled_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_gravity="center_vertical"
                        android:alpha="0.8"
                        android:textColor="#ff272727"
                        android:textSize="15dp"
                        android:text="11/09/17"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
</ScrollView>
</LinearLayout>
